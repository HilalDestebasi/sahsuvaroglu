<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/review"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/car_model_img"
        android:layout_width="@dimen/_130sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="@dimen/_90sdp"
        android:src="@drawable/torres"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/car_model_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        android:fontFamily="@font/league_spartan_bold"
        android:text="Torres 4x2 1.5 GDI Turbo"
        android:textColor="@color/main_color"
        android:textSize="@dimen/_10sdp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/car_model_img"
        app:layout_constraintEnd_toEndOf="@id/car_model_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/car_model_img"
       />



</androidx.constraintlayout.widget.ConstraintLayout>