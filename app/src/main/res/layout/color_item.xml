<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/color_item_img"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_100sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/torres"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/color_item_img"
        android:text="White"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/color_item_img"
        app:layout_constraintEnd_toEndOf="@id/color_item_img"
        android:fontFamily="@font/league_spartan_bold"
        android:textSize="@dimen/_8ssp"
        android:id="@+id/color_item_text"
        android:textColor="@color/main_color"/>

</androidx.constraintlayout.widget.ConstraintLayout>